{
  "extends": [],
  "plugins": [
    "react",
    "import"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "window": true,
    "document": true
  },
  "rules": {
    "import/no-named-as-default": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "debug"
        ]
      }
    ],
    "no-plusplus": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_t",
          "_raw"
        ]
      }
    ],
    "react/sort-comp": [
      "error",
      {
        "order": [
          "static-methods",
          "lifecycle",
          "/^on.+$/",
          "everything-else",
          "/^render.+$/",
          "render"
        ]
      }
    ],
    "class-methods-use-this": 0
  },
  "function-paren-newline": "consistent"
}