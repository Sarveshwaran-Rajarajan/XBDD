{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": ["prettier", "prettier/react"],
    "plugins": ["prettier", "react"],
    "rules": {
        "indent": ["error", 4],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-indent": [2, 4],
        "prettier/prettier": "error"
    },
    "env": {
        "jest": true
    },
    "globals": {
        "document": true
    }
}
